@model web_table.Web.ViewModel.EmployeeTimeShiftDTO;

<tr>
    <td rowspan="2" class="table-active border-bottom border-dark">
        @*<div class="card">*@
            <div class="card-body">

        <a onclick="showInPopup('@Url.Action("Details","Employee", new {id = Model.EmployeeId},Context.Request.Scheme)','Детали')"> 
            @Model.EmployeeName<br/>
            <small class="badge bg-secondary">(@Model.TypeOfEmp)</small>
        </a>
            </div>
        @*</div>*@

    </td>
    <td><small>@Model.PositionName</small></td>
    @*@foreach (var item in Model.HoursPlanned)*@
    @foreach(var item in Model.Types)
    {
        <td class="text-center">
            @item
        </td>
    }
    <td></td>
</tr>
<tr class="border-bottom border-dark">
    @{
        int i = 0;
    }
    <td><small>@Model.WorkScheduleName</small></td>
    @foreach (var item in Model.Dates)
    {
        bool disable = (item.DayOfWeek == DayOfWeek.Saturday || item.DayOfWeek == DayOfWeek.Sunday);
        <td class="text-center @(disable ? "bg-light" : "table-active")">
            <a onclick="showInPopup('@Url.Action("SetNewHours","TimeShift", new {empid = Model.EmployeeId, currentDate = item.ToString("yyyy-MM-dd")},Context.Request.Scheme)','Новые часы')" class="btn @(disable ? "disabled" : "")" >
                @*@Model.HoursWorked.ElementAt(i)*@
                @Model.Types.ElementAt(i)
            </a>
        </td>
        i++;
    }
    <td>
    </td>
</tr>
