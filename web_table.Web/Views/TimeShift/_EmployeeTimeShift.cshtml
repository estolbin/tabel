@model web_table.Web.ViewModel.EmployeeTimeShiftDTO;

<tr>
    <td rowspan="2">

        <a onclick="showInPopup('@Url.Action("Details","Employee", new {id = Model.EmployeeId},Context.Request.Scheme)','Детали')" class="link-info">
            @Model.EmployeeName
        </a>

    </td>
    @foreach (var item in Model.HoursPlanned)
    {
        <td class="text-center">
            @item
        </td>
    }
    <td></td>
</tr>
<tr>
    @{
        int i = 0;
    }
    @foreach (var item in Model.Dates)
    {
        bool disable = (item.DayOfWeek == DayOfWeek.Saturday || item.DayOfWeek == DayOfWeek.Sunday);
        <td class="text-center @(disable ? "bg-secondary" : "")">
            <a onclick="showInPopup('@Url.Action("SetNewHours","TimeShift", new {empid = Model.EmployeeId, curDate = item.ToString("yyyy-MM-dd")},Context.Request.Scheme)','Новые часы')" class="btn @(disable ? "disabled" : "")" >
                @Model.HoursWorked.ElementAt(i)
            </a>
        </td>
        i++;
    }
    <td>
    </td>
</tr>
