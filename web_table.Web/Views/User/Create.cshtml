@model web_tabel.Domain.AppUser

@{
    Layout = "_Layout";
}

<h2>Создание пользователя</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="form-label"></label>
                <select asp-for="RoleName" class="form-select" asp-items="@ViewBag.Roles"></select>
            </div>
            <div class="form-group">
                <label asp-for="FilterId" class="form-label"></label>
                <select asp-for="FilterId" class="form-select" asp-items="@ViewBag.Filters">
                    <option>Без фильтра</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Записать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>