@model IEnumerable<web_tabel.Domain.Role>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

@*<a class="btn btn-outline-primary" href="@Url.Action("Create")">Добавить роль</a>*@

<h1>Список ролей</h1>

<table class="table">
    <tr>
        <th>Имя</th>
        <th>Описание</th>
        <th>Согласующий</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.IsApproving</td>
            <td>
                <a href="@Url.Action("Edit", new {Name = item.Name})">Редактировать</a>
            </td>
        </tr>
    }
</table>