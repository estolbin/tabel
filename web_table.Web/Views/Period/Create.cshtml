@model web_tabel.Domain.TimeShiftPeriod;
@{
    Layout = "_Layout";
}

<h1 class="mb-3">Добавление периода</h1>

<div class="row">

    <div>
        <form asp-action="Create" method="post">
            <dl class="row">

            <div class="form-group d-flex">
                <dt class="col-md-2"><label asp-for="Name" class="control-label">Наименование</label></dt>
                <dd class="col-md-10"><input asp-for="Name" class="form-control"/></dd>
            </div>
            <div class="form-group d-flex">
                <dt class="col-md-2"><label asp-for="Start" class="control-label">Дата начала</label></dt>
                <dd><input asp-for="Start" class="form-control" /></dd>
            </div>
            <div class="form-group d-flex">
                <dt class="col-md-2"><label asp-for="End" class="control-label">Дата окончания</label></dt>
                <dd><input asp-for="End" class="form-control" /></dd>
            </div>
            <div class="form-group d-flex">
                <dt class="col-md-2"><label asp-for="Closed" class="form-check-label">Закрытый период</label></dt>
                <dd><input asp-for="Closed" class="form-check-input" type="checkbox" /></dd>
            </div>
            </dl>
            <div class="form-group mt-3">
                <input type="submit" value="Записать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
