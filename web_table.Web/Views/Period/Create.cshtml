@model web_tabel.Domain.TimeShiftPeriod;
@{
    Layout = "_Layout";
}

<h1>Добавление периода</h1>

<div class="row">

    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Наименование</label>
                <input asp-for="Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Start" class="control-label">Дата начала</label>
                <input asp-for="Start" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="End" class="control-label">Дата окончания</label>
                <input asp-for="End" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Closed" class="control-label">Закрытый период</label>
                <input asp-for="Closed" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
