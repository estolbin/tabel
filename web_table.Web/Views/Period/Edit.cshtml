@model web_tabel.Domain.TimeShiftPeriod;

@{
    Layout = null;
}
<div class="row">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label">Наименование</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Start" class="control-label">Дата начала</label>
            <input asp-for="Start" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="End" class="control-label">Дата окончания</label>
            <input asp-for="End" class="form-control"/>
        </div>
        <div class="form-group mt-3">
            <a asp-action="FillPeriod" asp-controller="Period" class="btn btn-outline-secondary" asp-route-periodId="@Model.Id">Заполнить период</a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>